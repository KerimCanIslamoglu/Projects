@model IEnumerable<BauToDoList.Models.Side>

@{
    ViewBag.Title = "Taraf";
}

<h2>Taraf</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-primary" })
    <a class="dt-button buttons-excel buttons-html5 btn yellow btn-outline" tabindex="0" aria-controls="sample-1" href="@Url.Action("ExportToExcel","Sides")" style="float:right;"><span>Excel Aktarımı</span></a>
    <a class="dt-button buttons-excel buttons-html5 btn purple btn-outline" tabindex="0" aria-controls="sample-1" href="@Url.Action("ExportToCsv","Sides")" style="float:right; margin-right:5px;"><span>Csv Aktarımı</span></a>
</p>
<table id="tblRecords"  class="table">
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
